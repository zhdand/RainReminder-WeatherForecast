<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stop_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.stop_reminder.StopReminderFragment">

    <TextView
        android:id="@+id/text_view_stop_reminder_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageview_stop_reminder_umbrella"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_stop_reminder_umbrella"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/stop_reminder_umbrella"
        android:src="@drawable/umbrella_rain"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_stop_reminder_message" />

    <Button
        android:id="@+id/button_stop_reminder"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/button_stop_reminder_ok"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_stop_reminder_umbrella" />


</androidx.constraintlayout.widget.ConstraintLayout>